  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.17.1",
    "nunjucks": "^3.2.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "browser-sync": "^2.27.4",
    "commitizen": "^4.2.4",
    "husky": "^7.0.1",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5"
  }
}
